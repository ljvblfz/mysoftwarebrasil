<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title</title>
    <link href="@Url.Content("~/Themes/Default/Content/Site.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Themes/Default/Content/ThemeDefult.css")" rel="stylesheet" type="text/css" />
    <script src="@Url.Content("~/Themes/Default/Scripts/jquery-1.5.1.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Themes/Default/Scripts/modernizr-1.7.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Themes/Default/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Themes/Default/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
</head>
<body>
    <div id="container">
        <div id="blueBar" class=""></div>
        <div id="header" class="fb2">
            <h1>
                Site
            </h1>
            <div id="navigation" class="nav">
                <div id="menu" class="rfloat">
                    @Html.Partial("_Menu")
                </div>
            </div>
        </div>
        <div id="content-container">
            <div id="section-navigation">
                @Html.Partial("_LauoutLeft")
            </div>
            <div id="content">
                @RenderBody()
                <div id="bottomContent"></div>
                <div id="contentCurve"></div>
                <div id="footer">
                    Copyright © Site name, 20XX
                </div>
            </div>
@*            <div id="aside">
                @Html.Partial("_LauoutRight")
            </div>*@
        </div>
    </div>
</body>
</html>
