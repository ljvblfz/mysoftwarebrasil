@model IEnumerable<Infrastructure.Models.Menu>

@{
    ViewBag.Title = "List";
    Layout = "~/Themes/Default/Views/Shared/_Layout.cshtml";
}

<h2>List</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table>
    <tr>
        <th>
            MenuName
        </th>
        <th>
            MenuOrdem
        </th>
        <th>
            MenuPath
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.MenuName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.MenuOrdem)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.MenuPath)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.MenuId }) |
            @Html.ActionLink("Details", "Details", new { id=item.MenuId }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.MenuId })
        </td>
    </tr>
}

</table>
